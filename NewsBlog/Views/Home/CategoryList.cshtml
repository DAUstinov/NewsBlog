@model IEnumerable<NewsBlog.Models.Category>

@{
    ViewBag.Title = "View";
}

<h2>Список категорий</h2>

<p>
    @Html.ActionLink("Добавить новую категорию", "CreateCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "EditCategory", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "DeleteCategory", new { id=item.Id })
        </td>
    </tr>
}

</table>
