@using NewsBlog.Models
@model NewsBlog.Models.Comment


@{
    ViewBag.Title = "CreateComment";
}

@using (Html.BeginForm())
{
<form>
    <div class="form-group">

        <div>Название статьи</div>
        @Html.EditorFor(model => model.CommentText, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.CommentText, "Поле 'текст комментария' должно быть обязательно заполнено", new { @class = "text-danger" })
    </div>

</form>
}
<div>
    @Html.ActionLink("Вернуться к списку", "Admin")
</div>
