@model IEnumerable<NewsBlog.Models.Tag>

@{
    ViewBag.Title = "TagList";
}

<h2>Список тегов</h2>

<p>
    @Html.ActionLink("Добавить новый тег", "CreateTag")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TagName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TagName)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteTag", new { id=item.Id })
        </td>
    </tr>
}

</table>
